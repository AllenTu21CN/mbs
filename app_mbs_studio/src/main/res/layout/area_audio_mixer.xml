<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@drawable/common_area_bg">

    <include layout="@layout/area_audio_mixer_item"
        android:id="@+id/audio_mixer_output"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/audio_mixer_mic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="18px"
        android:layout_marginLeft="18px"
        android:layout_marginRight="18px" />

    <include layout="@layout/area_audio_mixer_item"
        android:id="@+id/audio_mixer_mic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/audio_mixer_output"
        app:layout_constraintBottom_toTopOf="@id/audio_mixer_input_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="18px"
        android:layout_marginLeft="18px"
        android:layout_marginRight="18px" />

    <include layout="@layout/area_audio_mixer_item"
        android:id="@+id/audio_mixer_input_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/audio_mixer_mic"
        app:layout_constraintBottom_toTopOf="@id/audio_mixer_input_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="18px"
        android:layout_marginLeft="18px"
        android:layout_marginRight="18px" />

    <include layout="@layout/area_audio_mixer_item"
        android:id="@+id/audio_mixer_input_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/audio_mixer_input_1"
        app:layout_constraintBottom_toTopOf="@id/audio_mixer_input_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="18px"
        android:layout_marginLeft="18px"
        android:layout_marginRight="18px" />

    <include layout="@layout/area_audio_mixer_item"
        android:id="@+id/audio_mixer_input_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/audio_mixer_input_2"
        app:layout_constraintBottom_toTopOf="@id/audio_mixer_input_4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="18px"
        android:layout_marginLeft="18px"
        android:layout_marginRight="18px" />

    <include layout="@layout/area_audio_mixer_item"
        android:id="@+id/audio_mixer_input_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/audio_mixer_input_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="18px"
        android:layout_marginBottom="18px"
        android:layout_marginLeft="18px"
        android:layout_marginRight="18px" />

</androidx.constraintlayout.widget.ConstraintLayout>