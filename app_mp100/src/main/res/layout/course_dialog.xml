<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11ffffff">

    <!-- see: http://blog.csdn.net/oqihaogongyuan/article/details/50958659 -->

    <LinearLayout
        android:layout_width="@dimen/course_dialog_width"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/course_dialog_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/course_dialog_title_view_margin"
            android:gravity="center"
            android:text="课程信息"
            android:textColor="@android:color/white"
            android:textSize="@dimen/course_dialog_title_font_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/course_dialog_info_view_margin_top"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/course_dialog_info_font_size"
                    android:text="课程" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/course_dialog_info_font_size"
                    android:text="老师" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/course_dialog_info_font_size"
                    android:text="时间" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/course_dialog_info_font_size"
                    android:text="内容" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/course_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/course_dialog_info_font_size"
                    android:text="语文" />

                <TextView
                    android:id="@+id/course_teacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/course_dialog_info_font_size"
                    android:text="方老师" />

                <TextView
                    android:id="@+id/course_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/course_dialog_info_font_size"
                    android:text="2017-10-29 第一节" />

                <TextView
                    android:id="@+id/course_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/course_dialog_info_font_size"
                    android:text="岳阳楼记" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/course_dialog_view_line"
            android:layout_marginTop="@dimen/course_dialog_view_margin_top"
            android:background="@color/course_dialog_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/course_dialog_button_bk_height"
            android:orientation="horizontal">

            <Button
                android:id="@+id/course_dialog_no"
                android:layout_width="@dimen/course_dialog_none_size"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/course_dialog_left_button_selector"
                android:gravity="center"
                android:singleLine="true"
                android:text="No"
                android:textColor="@android:color/white"
                android:textSize="@dimen/course_dialog_button_font_size" />

            <View
                android:layout_width="@dimen/course_dialog_view_line"
                android:layout_height="match_parent"
                android:background="@color/course_dialog_line_color" />

            <Button
                android:id="@+id/course_dialog_yes"
                android:layout_width="@dimen/course_dialog_none_size"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/course_dialog_right_button_selector"
                android:gravity="center"
                android:singleLine="true"
                android:text="Yes"
                android:textColor="@android:color/white"
                android:textSize="@dimen/course_dialog_button_font_size" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
