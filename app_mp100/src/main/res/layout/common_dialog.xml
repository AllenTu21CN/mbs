<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11ffffff">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/common_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="TITLE"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Text or Image -->
            <TextView
                android:id="@+id/dialog_extra_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="14sp"/>

        </FrameLayout>


        <!-- dialog divider line  -->
        <VideoView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="15dp"
            android:background="@color/course_dialog_line_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dialog_left_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/course_dialog_left_button_selector"
                android:gravity="center"
                android:maxLines="1"
                android:text="LEFT BTN"
                android:textColor="#38ADFF"
                android:textSize="16sp"/>

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/course_dialog_line_color"/>

            <Button
                android:id="@+id/dialog_right_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/course_dialog_right_button_selector"
                android:gravity="center"
                android:maxLines="1"
                android:text="RIGHT BTN"
                android:textColor="#38ADFF"
                android:textSize="16sp"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
